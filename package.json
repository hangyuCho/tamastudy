{
  "name": "tama",
  "version": "1.0.0",
  "description": "## 환경변수 설정",
  "main": "index.js",
  "scripts": {
    "client-prettier": "cd client && prettier --write .",
    "client-eslint": "cd client && npm run lint",
    "node_api-prettier": "cd node_api && prettier --write .",
    "node_api-eslint": "cd node_api && npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jonsoku2/tamastudy.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jonsoku2/tamastudy/issues"
  },
  "homepage": "https://github.com/jonsoku2/tamastudy#readme",
  "devDependencies": {
    "eslint": "^7.7.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11"
  },
  "husky" : {
    "hooks": {
        "pre-push": "./huskyhooks/pre-push",
        "pre-commit": "lint-staged"
    }
  },
  "lint-staged" : {
    "client/**/*.{js,jsx}": [
      "npm run client-prettier",
      "npm run client-eslint"
    ],
    "node_api/**/*.{js}": [
      "npm run node_api-prettier",
      "npm run node_api-eslint"
    ],
    "*" : [
      "git add" 
   ]
  }
}
